<div class="container">
  <div class="align-items-center pt-3 pb-2 mb-3 border-bottom">
    <div class="row">
      <div class="col-md-1 col-3">
        <div class="btn-toolbar mb-2 mb-md-0">
          <%= link_to I18n.t('views.return'), categories_path, class: 'btn btn-outline-dark' %>
        </div>
      </div>
      <div class="col-md-11 col-9">
        <h2><%= I18n.t('views.new_category') %></h2>
      </div>
    </div>
  </div>
  <%= form_with model: @category do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-body">
            <div class="mb-3">
              <%= f.label :name, I18n.t('attributes.categories.name'), class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control', required: true %>
            </div>
            <div class="d-flex justify-content-between">
              <%= link_to I18n.t('views.discard'), categories_path, class: 'btn btn-outline-dark' %>
              <%= f.submit I18n.t('views.save'), class: "btn btn-success align-left" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>